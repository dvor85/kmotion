# Starts/stop/reloads the kmotion daemons, executable from anywhere in the system
# kmotion start|stop|reload

if [[ $UID = 0 ]]; then
    echo -e '\nkmotion cant be run as root\n'
    exit 0
fi


KMOTION_DIR=/usr/local/kmotion3
cd $KMOTION_DIR
if [[ -z $1 || "$1" = 'start' || "$1" = 'restart' ]]; then
	nohup $KMOTION_DIR/kmotion.py $1 &
else 
	if [[ "$1" = 'stop' || "$1" = 'status' ]]; then
		$KMOTION_DIR/kmotion.py $1
	else
		echo -e '\nkmotion start|stop|restart|status\n'
	fi;
fi;



