Listen ${port_notice}
<VirtualHost *:${port_notice}>

	ServerName notice
    ServerAdmin webmaster@localhost
    Options -Indexes
    
    #UserDir disabled root 
    <Directory />
	    AllowOverride None
		<IfVersion < 2.4>
        	Order Deny,Allow
			Deny from All
	    </IfVersion>
	    <IfVersion >= 2.4>
	        Require all denied
	    </IfVersion>
    </Directory>
    
    WSGIScriptAlias / ${wsgi_notice}/notice.py
    <Directory ${wsgi_notice}>
        AllowOverride None
		<IfVersion < 2.4>
        	Order allow,deny
        	Allow from all
	    </IfVersion>
	    <IfVersion >= 2.4>
	        Require all granted
	    </IfVersion>
    </Directory>

	ErrorLog "${APACHE_LOG_DIR}/kmotion_error.log"
	TransferLog "${APACHE_LOG_DIR}/kmotion_access.log"

</VirtualHost>

