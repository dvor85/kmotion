Listen ${port_notice}
NameVirtualHost *:${port_notice}
<VirtualHost *:${port_notice}>

	ServerName notice
    ServerAdmin webmaster@localhost
    Options -Indexes
    
    #UserDir disabled root 
    <Directory />
	    Order Deny,Allow
	    Deny from All
    </Directory>
    
    WSGIScriptAlias / ${wsgi_notice}/notice.py
    <Directory ${wsgi_notice}>
        AllowOverride None
		Order allow,deny
		Allow from all
    </Directory>

	ErrorLog "${APACHE_LOG_DIR}/error_kmotion.log"
	TransferLog "${APACHE_LOG_DIR}/access_kmotion.log"

</VirtualHost>

