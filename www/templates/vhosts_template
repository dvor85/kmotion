Listen {port}
NameVirtualHost *:{port}
# http://httpd.apache.org/docs/2.0/misc/security_tips.html

<VirtualHost *:{port}>

    ServerName kmotion
    ServerAdmin webmaster@localhost
    DocumentRoot {www_dir}
    Options -Indexes
    #UserDir disabled root 
    
    <Directory />
    Order Deny,Allow
    Deny from All
    </Directory>

    <Directory {www_dir}>
        # secure login ...
        AuthType Basic
        {LDAP_block}
        Require valid-user
	
        AllowOverride None
        Order allow,deny
        allow from all
    </Directory>
    
    Alias /images_dbase/ {images_dbase_dir}/
    <Directory {images_dbase_dir}/>
        # secure login ...
        AuthType Basic
        {LDAP_block}
        Require valid-user
	
        AllowOverride None
        Order allow,deny
        allow from all
    </Directory>

    Alias /kmotion_ramdisk/ {ramdisk_dir}/
    <Directory {ramdisk_dir}/>
        # secure login ...
        AuthType Basic
        {LDAP_block}
        Require valid-user
	
        AllowOverride None
        Order allow,deny
        allow from all
    </Directory>
    
    WSGIScriptAlias /ajax {wsgi_scripts}/ajax.py
    WSGIPassAuthorization On
	<Directory {wsgi_scripts}>
		# secure login ...
        AuthType Basic
        {LDAP_block}
        Require valid-user
        
        AllowOverride None
  		Order allow,deny
  		Allow from all
	</Directory>

    # Possible values include: debug, info, notice, warn, error, crit,
    LogLevel info

    ErrorLog {logs_dir}/error_kmotion.log
    #TransferLog {logs_dir}/access_kmotion.log
    #CustomLog {logs_dir}/access_kmotion.log combined
    
</VirtualHost>
